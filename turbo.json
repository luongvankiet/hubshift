{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "API_GATEWAY_PORT",
    "AUTH_SERVICE_PORT",
    "DATABASE_URL",
    "NEXT_PUBLIC_API_GATEWAY_URL",
    "API_GATEWAY_URL",
    "AUTH_SERVICE_URL"
  ]
}
